{
  "name": "planar",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev:tmux": "tmux new-session -d -s planar 'cd packages/api && pnpm dev' \\; split-window -h 'cd packages/web && pnpm dev' \\; select-layout tiled \\; attach -t planar",
    "typecheck": "pnpm -r run typecheck",
    "lint": "pnpm -r run lint",
    "format": "pnpm -r run format",
    "@core": "pnpm -F @planar/core",
    "@web": "pnpm -F @planar/web",
    "@api": "pnpm -F @planar/api"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@tsconfig/node22": "^22.0.2",
    "@tsconfig/strictest": "^2.0.6",
    "@types/node": "^24.5.2",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "packageManager": "pnpm@10.11.0"
}
